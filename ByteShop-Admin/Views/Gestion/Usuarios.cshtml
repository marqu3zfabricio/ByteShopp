@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0"><i class="fas fa-users me-2 text-primary"></i> Usuarios</h2>
            <small class="text-muted">Gestion de usuarios</small>
        </div>
    </div>

    <div class="card shadow rounded-3 mt-4">
        <!-- Encabezado de la tarjeta -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span><i class="fas fa-users me-2"></i> Listado de Usuarios</span>
            <button class="btn btn-light btn-sm" id="btnNuevoUsuario">
                <i class="fas fa-plus me-1"></i> Crear nuevo
            </button>
        </div>

        <!-- Cuerpo con tabla -->
        <div class="card-body">
            <div class="table-responsive">
                <table id="tablaUsuarios" class="table table-hover align-middle" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Activo</th>
                            <th style="width:120px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Usuario -->
<div class="modal fade" id="modalUsuario" tabindex="-1" aria-labelledby="modalUsuarioLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content rounded-3 shadow">
            <!-- Encabezado -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalUsuarioLabel">Nuevo Usuario</h5>
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal" aria-label="Cerrar">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <!-- Cuerpo -->
            <div class="modal-body">
                <input type="hidden" id="idUsuario" value="0" />

                <div class="mb-3">
                    <label class="form-label fw-semibold">Nombres</label>
                    <input type="text" class="form-control form-control-sm" id="nombres" placeholder="Ingrese los nombres" autocomplete="off" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Apellidos</label>
                    <input type="text" class="form-control form-control-sm" id="apellidos" placeholder="Ingrese los apellidos" autocomplete="off" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Correo</label>
                    <input type="email" class="form-control form-control-sm" id="correo" placeholder="Ingrese el correo" autocomplete="off" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Rol</label>
                    <select class="form-select form-select-sm" id="rol" required>
                        <option value="">Seleccione un rol</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Empleado">Empleado</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Activo</label>
                    <select class="form-select form-select-sm" id="activo">
                        <option value="1">Sí</option>
                        <option value="0">No</option>
                    </select>
                </div>
            </div>

            <!-- Pie -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Cancelar
                </button>
                <button type="button" class="btn btn-primary btn-sm" id="btnGuardarUsuario">
                    <i class="fas fa-save me-1"></i> Guardar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let tablaUsuarios;
        let filaSeleccionada;

        $(document).ready(function () {
            tablaUsuarios = $('#tablaUsuarios').DataTable({
                responsive: true,
                ordering: true,
                ajax: {
                    url: '@Url.Action("ListarUsuarios", "Gestion")',
                    type: 'GET',
                    dataType: 'json',
                    error: function(xhr, status, error) {
                        console.log("Error DataTables:", xhr.responseText);
                        
                        Swal.fire('Error', 'Ocurrió un problema al cargar los usuarios: ' + error, 'error');
                    }
                },
                columns: [
                    { data: 'Nombres' },
                    { data: 'Apellidos' },
                    { data: 'Correo' },
                    { data: 'Rol' },
                    {
                        data: 'Activo',
                        render: valor => valor
                            ? '<span class="badge bg-success text-white">Sí</span>'
                            : '<span class="badge bg-danger text-white">No</span>'
                    },
                    {
                        data: null,
                        orderable: false,
                        render: () => `
                            <button class="btn btn-sm btn-primary btn-editar"><i class="fas fa-pen"></i></button>
                            <button class="btn btn-sm btn-danger btn-eliminar ms-1"><i class="fas fa-trash"></i></button>`
                    }
                ],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                }
            });
        });

        // Abrir modal para nuevo usuario
        $('#btnNuevoUsuario').on('click', function () {
            $('#idUsuario').val(0);
            $('#nombres').val('');
            $('#apellidos').val('');
            $('#correo').val('');
            $('#rol').val('');
            $('#activo').val(1);
            $('#modalUsuarioLabel').text('Nuevo Usuario');
            $('#modalUsuario').modal('show');
        });

        // Guardar usuario
        $('#btnGuardarUsuario').on('click', function () {
        const usuario = {
            IdUsuario: parseInt($('#idUsuario').val()),
            Nombres: $('#nombres').val().trim(),
            Apellidos: $('#apellidos').val().trim(),
            Correo: $('#correo').val().trim(),
            Clave: "",          // se generará automáticamente
            Reestablecer: false,
            Rol: $('#rol').val(),
            Activo: $('#activo').val() == 1
        };

        if (!usuario.Nombres || !usuario.Apellidos || !usuario.Correo) {
            mostrarSwal('Complete todos los campos');
            return;
        }

        if (!usuario.Rol) {
            mostrarSwal('Debe seleccionar un rol para el nuevo usuario');
            return;
        }

        function mostrarSwal(mensaje) {
            Swal.fire({
                text: mensaje,
                icon: 'warning',
                iconColor: '#0d6efd',
                confirmButtonColor: '#0d6efd'
            });
        }
            $.ajax({
                url: '@Url.Action("GuardarUsuario", "Gestion")',
                type: 'POST',
                data: JSON.stringify(usuario),
                processData: false,
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                   
                    if (data.exito) {
                        $('#modalUsuario').modal('hide');
                        tablaUsuarios.ajax.reload();
                        Swal.fire({
                                    icon: 'success',
                                    title: '',
                                    html: data.mensaje,
                                    iconColor: '#0d6efd',
                                    confirmButtonColor: '#0d6efd'
                                });
                    } else {
                        Swal.fire({
                                    icon: 'error',
                                    title: '',
                                    html: data.mensaje,
                                    iconColor: '#0d6efd',
                                    confirmButtonColor: '#0d6efd'
                                });
                    }
                },
                error: function(xhr, status, error) {
                    
                    
                    Swal.fire('Error', 'Ocurrió un problema al guardar el usuario: ' + error, 'error');
                }
            });
        });

        // Editar usuario
        $('#tablaUsuarios tbody').on('click', '.btn-editar', function () {
            filaSeleccionada = $(this).closest('tr');
            const data = tablaUsuarios.row(filaSeleccionada).data();

            $('#idUsuario').val(data.IdUsuario);
            $('#nombres').val(data.Nombres);
            $('#apellidos').val(data.Apellidos);
            $('#correo').val(data.Correo);
            $('#rol').val(data.Rol);
            $('#activo').val(data.Activo ? 1 : 0);
            $('#modalUsuarioLabel').text('Editar Usuario');
            $('#modalUsuario').modal('show');
        });

        // Eliminar usuario
        $('#tablaUsuarios tbody').on('click', '.btn-eliminar', function () {
            const fila = $(this).closest('tr');
            const data = tablaUsuarios.row(fila).data();

            Swal.fire({
                title: '¿Eliminar usuario?',
                text: `Se eliminará el usuario "${data.Nombres} ${data.Apellidos}"`,
                icon: 'warning',
                 iconColor: '#0d6efd',
                    showCancelButton: true,
                    confirmButtonText: 'Eliminar',
                    confirmButtonColor: '#0d6efd',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true
            }).then(result => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("EliminarUsuario", "Gestion")?id=' + data.IdUsuario,
                        type: 'DELETE',
                        success: resp => {
                            if (resp.exito) {
                                tablaUsuarios.ajax.reload();
                                Swal.fire({
                                    icon: 'success',
                                    title: '',
                                    html: resp.mensaje,
                                    iconColor: '#0d6efd',
                                    confirmButtonColor: '#0d6efd'
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: '',
                                    html: resp.mensaje,
                                    iconColor: '#0d6efd',
                                    confirmButtonColor: '#0d6efd'
                                });
                            }
                        },
                        error: function(xhr, status, error) {
                            console.log("Error al eliminar usuario:", xhr.responseText);
                            Swal.fire('Error', 'Ocurrió un problema al eliminar el usuario: ' + error, 'error');
                        }
                    });
                }
            });
        });
    </script>
}
